{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "rules": {
    "comma-dangle": 0,
    "max-len": [2, 120],
    "object-curly-spacing": 1,
    "react/prefer-stateless-function": 1,
    "react/prop-types": 1,
    "no-underscore-dangle": [ "error", { "allowAfterThis": true }],
    "import/no-unresolved": [ "error", { "ignore": ["components/", "stylus/"] }]
  }
}
