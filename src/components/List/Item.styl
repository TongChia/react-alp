.alp-item
  padding gutterLess
  margin-left 0
  border 1px solid borderColor
  line-height gutter

  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;

  display flex

  .alp-item-inner
    flex 1

    .label
      width 100%
      font-size gutterLess
      font-weight 400
      margin 0
      vertical-align top

  &:not(:last-child)
    border-bottom 0 transparent

  &.alp-item-icon
    .alp-icon
      vertical-align middle
    .alp-icon:first-child
      font-size 1.5rem
      margin-right 1rem
      width 1.5rem
      height 1.5rem

  &.alp-item-avatar
    height 3.5rem
    .alp-avatar
      width 3.5rem
      height 3.5rem
