/**
 * default theme config file
 */

@import "../../node_modules/google-material-color/dist/palette.styl"

// sizes
fontSize ?= 16px
iconSize ?= 24px

gutter ?= 1.5rem
gutterMore ?= 2rem
gutterLess ?= 1rem
gutterMini ?= .5rem
toolbarHeight ?= (gutter + gutterMore)

// colors
primaryColor1 ?= palette('Teal', '300')
primaryColor2 ?= palette('Teal', '500')
primaryColor3 ?= palette('Teal', '100')
accentColor1 ?= palette('Pink', '400')
accentColor2 ?= palette('Pink', '700')
accentColor3 ?= palette('Pink', '100')
textColor ?= palette('Black', 'Text')
textInvertColor ?= white
secondaryTextColor ?= palette('Black', 'Secondary Text')
alternateTextColor ?= palette('Blue Grey', '900')
canvasColor ?= #303030
borderColor ?= rgba(textColor, 0.2)
disabledColor ?= palette('Black', 'Disabled')
